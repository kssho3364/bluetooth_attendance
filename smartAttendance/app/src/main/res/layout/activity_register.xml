<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/setMyName_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="이름"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236" />

    <EditText
        android:id="@+id/insertCode_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="코드"
        app:layout_constraintEnd_toEndOf="@+id/setMyName_edit"
        app:layout_constraintStart_toStartOf="@+id/setMyName_edit"
        app:layout_constraintTop_toBottomOf="@+id/setMyName_edit" />

    <Button
        android:id="@+id/request_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="인증"
        app:layout_constraintEnd_toEndOf="@+id/insertCode_edit"
        app:layout_constraintStart_toStartOf="@+id/insertCode_edit"
        app:layout_constraintTop_toBottomOf="@+id/pullRequest_bt" />

    <Button
        android:id="@+id/pullRequest_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="인증요청"
        app:layout_constraintEnd_toEndOf="@+id/insertCode_edit"
        app:layout_constraintStart_toStartOf="@+id/insertCode_edit"
        app:layout_constraintTop_toBottomOf="@+id/insertCode_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>